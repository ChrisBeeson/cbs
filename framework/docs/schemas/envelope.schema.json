{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cbs/specs/envelope.schema.json",
  "title": "CBS Envelope",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "service": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
    "verb": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },
    "schema": { "type": "string", "pattern": "^[a-z][a-z0-9_]+/v[0-9]+/[A-Za-z][A-Za-z0-9_]*$" },
    "payload": { "type": "object" },
    "error": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": ["object", "null"] }
      },
      "required": ["code", "message"],
      "additionalProperties": true
    }
  },
  "required": ["id", "service", "verb", "schema"],
  "additionalProperties": false,
  "oneOf": [
    { "required": ["payload"], "not": { "required": ["error"] } },
    { "required": ["error"], "not": { "required": ["payload"] } }
  ]
}


